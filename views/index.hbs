<html>
  <head>
    <title>Doko Online Store</title>
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    {{>header}} <!-- This is to import the code of the  headers which is in header.hbs --> 
    <section class="products">
      {{#each productData}}
        <div class="product-card">
          <a href="/products/{{id}}">
            <div class="product-image">
              <img src={{image}} />
            </div>
            <div class="product-info">
              <h5>{{title}}</h5>
              <h6>{{price}}</h6>
            </div>
          </a>
        </div>
      {{/each}}
    </section>
  </body>
</html>